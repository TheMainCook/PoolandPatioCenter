@model IEnumerable<PoolandPatioCenter.Models.Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <div class="col-sm-8">
        <div class="dropdown">
            <a class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-search"></span> Categories </a>
            <ul class="dropdown-menu">
                <li><a href="#">Pool Chemicals</a></li>
                <li><a href="#">Grills</a></li>
                <li><a href="#">Spas</a></li>
                <li><a href="#">Entertainment</a></li>
                <li><a href="#">Patio</a></li>
                <li><a href="#">Furniture</a></li>
            </ul>
        </div>
    </div>
    <div>
        <div class="col-sm-4">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search">
                <div class="input-group-append">
                    <button class="btn btn-success pull-right" type="submit">Go</button> <!--Cannot get button to append-->
                </div>
            </div>
        </div>
    </div>
</div>

<h2>Products</h2>
@if (!Model.Any())
{
    <p>We don't have any products yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Amount In Stock</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@Html.ActionLink(product.Name, "Details", "Products", new { id = product.Id }, null)<button class="btn btn-success btn-sm pull-right" type="submit"><span class="glyphicon glyphicon-shopping-cart"> </span></button></td>
                <td>@Ajax.ActionLink(product.Price.ToString(), "Details", "Products", new { id = product.Id }, null)</td>
                <td>@Html.ActionLink(product.Description, "Details", "Products", new { id = product.Id }, null)</td>
                <td>
                    @if (product.Quantity == 0)
                    {
                        <p>OUT OF STOCK</p>
                    }
                    else
                    {
                        @Ajax.ActionLink(product.Quantity.ToString(), "Details", "Products", new {id = product.Id}, null)
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Leave a review...</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        <input class="btn btn-primary" type="submit" value="Submit">
    </div>
    <br/>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th></th>
            <th>Items Sold</th>
            <th>Revenue</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td></td>
            <td>ITEMS</td>
            <td>REVENUES</td>
        </tr>
        </tbody>
        <tfoot>
        <tr>
            <td>Totals</td>
            <td>TOTAL ITEMS</td>
            <td>TOTAL REVENUES</td>
        </tr>
        </tfoot>
    </table>
}

