@model IEnumerable<PoolandPatioCenter.Models.Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_SearchPartial")

<button class="btn btn-primary" type="button"><span class="glyphicon glyphicon-plus"></span>
    @Html.ActionLink("Add Product", "ProductsForm", "Products", null, new {@style="color:white; text-decoration:none;"})
    </button>

<h2>Products</h2>
@if (!Model.Any())
{
    <p>We don't have any products yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Amount In Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@Html.ActionLink(product.Name, "Details", "Products", new { id = product.Id }, null)<button class="btn btn-success btn-sm pull-right" type="submit"><span class="glyphicon glyphicon-shopping-cart"></span></button></td>
                    <td>@Ajax.ActionLink(product.Price.ToString(), "Details", "Products", new { id = product.Id }, null)</td>
                    <td>@Html.ActionLink(product.Description, "Details", "Products", new { id = product.Id }, null)</td>
                    <td>
                        @if (product.Quantity == 0)
                        {
                            <p>OUT OF STOCK</p>
                        }
                        else
                        {
                            @Ajax.ActionLink(product.Quantity.ToString(), "Details", "Products", new { id = product.Id }, null)
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Leave a review...</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        <input class="btn btn-primary" type="submit" value="Submit">
    </div>
}

